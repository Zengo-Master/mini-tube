<div class="whole">
  <div class="container">
    <%= form_with(model: @video, class: 'new-field', local: true) do |f| %>

      <div class="field">
        <%= f.label :video, '①動画', class: 'video-contents' %><span class="hissu">必須</span><br />
        <%= f.file_field :video, class: "inner" %>
      </div>

      <div class="field">
        <%= f.label :title, '②タイトル', class: '' %><span class="hissu">必須</span><br />
        <%= f.text_field :title, placeholder: '', class: "inner" %>
      </div>

      <div class="field">
        <%= f.label :image, '③サムネイル', class: '' %><span class="hissu">必須</span><br />
        <%= f.file_field :image, class: "inner" %>
      </div><br><br>

      <div class="send">
        <%= f.submit "アップロード", class: 'send-btn' %>
      </div><br>

    <% end %>
  </div>
</div>