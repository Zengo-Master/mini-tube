<div class="whole">
  <div class="container">
    <%= form_with(model: @video, class: 'new-field', local: true) do |f| %>

      <div class="field">
        <%= f.label :video, '①動画', class: 'video-contents' %><span class="hissu">必須</span><br />
        <%= f.file_field :video, class: "inner" %>
      </div>

      <div class="field">
        <%= f.label :title, '②タイトル', class: '' %><span class="hissu">必須</span><br />
        <%= f.text_field :title, placeholder: '', class: "inner", size: "30x1" %>
      </div>

      <div class="field">
        <%= f.label :image, '③局面', class: '' %><span class="hissu">必須</span><br />
        <%= f.file_field :image, class: "inner" %>
      </div>

      <div class="field">
        <%= f.label :kifu, '④局面テキスト' %><span class="ninni">任意</span><br />
        <%= f.text_area :kifu, placeholder: 'kif形式で貼り付け', size: "25x5", class: "inner" %>
      </div>

      <div class="send">
        <%= f.submit "更新", class: 'send-btn' %>
      </div><br>

    <% end %>
  </div>
</div>